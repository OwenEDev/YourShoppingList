<custom_list_item>:
    text: root.text
    on_press: print(root.printmsg)

<MyPopup@Popup>:
    auto_dismiss: False
    title: 'Add Recipe'
    GridLayout:
        cols: 1
        spacing: 10

        MDTextField:
            hint_text: 'Recipe Title'

        MDTextField:
            hint_text: 'Ingredients'
            max_height: "200dp"
            multiline: True

        BoxLayout:
            orientation:'horizontal'

            Button:
                size_hint: .1,.1
                text: 'Cancel'
                on_release: root.dismiss()
            Button:
                size_hint: .1,.1
                text: 'Save'


BoxLayout:
    orientation: "vertical"

