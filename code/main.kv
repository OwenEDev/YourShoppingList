#:kivy 2.0.0
#:import Factory kivy.factory.Factory

<custom_list_item>:
    text: root.text
    on_press: app.add_to_list(root.text)

<MyPopup@Popup>:
    auto_dismiss: False
    title: 'Add Recipe'
    GridLayout:
        cols: 1
        spacing: 10

        MDTextField:
            hint_text: 'Recipe Title'
            id: recipe_title

        MDTextField:
            hint_text: 'Ingredients'
            max_height: "200dp"
            multiline: True
            id: ingredients

        BoxLayout:
            orientation:'horizontal'

            Button:
                size_hint: .1,.1
                text: 'Cancel'
                on_release: root.dismiss()
            Button:
                size_hint: .1,.1
                text: 'Save'
                on_release: app.save_recipe(recipe_title.text, ingredients.text)

BoxLayout:
    orientation: "vertical"

    MDToolbar:
        title: "Your Shopping List"
        specific_text_color: 1,1,1,1
        
    MDBottomNavigation:

        #PAGE 1
        MDBottomNavigationItem:
            text: "screen 1 text"
            name: "screen1"
            icon: "account-cog"
            FloatLayout:


                ScrollView:
                    do_scroll_x: False
                    do_scroll_y: True
                    MDList:
                        id: recipe_list
                        OneLineAvatarListItem:
                            text: "Add Recipe"
                            on_press: Factory.MyPopup().open()
                            ImageLeftWidget:
                                #source: source here

        #PAGE 2
        MDBottomNavigationItem:
            text: "screen 2 text"
            name: "screen2"
            icon: "plus"
            ScrollView:
                MDTextField:
                    size_hint_x: 1
                    hint_text: "Shopping List"
                    max_height: "200dp"
                    mode: "fill"
                    fill_color: 0, 0, 0, .1
                    multiline: True
                    pos_hint: {"center_x": .5, "center_y": .5}
                    id: shopping_list


